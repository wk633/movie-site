extend ../layout

block content
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if category.movies && category.movies.length > 0          
            each item in category.movies
              .col-sm-3
                .thumbnail
                  a(href="/movie/#{item._id}")
                    img(src="#{item.poster}", alt="#{item.title}")
                  .caption
                    h3 #{item.title}
                    p
                      a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看详情
