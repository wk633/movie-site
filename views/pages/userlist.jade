extend ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 名字
                        th 密码
                        th 录入时间
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in users
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{item.password}
                            td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
                            //- xx: xx 是嵌套的简写方法
                            td: a(target="_blank", href="../detail/#{item._id}") 查看 
                            td: a(target="_blank", href="../admin/control/update/#{item._id}") 修改
                            td
                                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除

